// Mostrar/Esconder informações adicionais na seção "Sobre Mim"
const toggleButton = document.getElementById('toggle-info');
const infoAdicional = document.getElementById('info-adicional');

toggleButton.addEventListener('click', function() {
    if (infoAdicional.style.display === 'none') {
        infoAdicional.style.display = 'block';
        toggleButton.textContent = 'Mostrar Menos';
    } else {
        infoAdicional.style.display = 'none';
        toggleButton.textContent = 'Mostrar Mais';
    }
});

// Enviar formulário de contato
const formContato = document.getElementById('form-contato');

formContato.addEventListener('submit', function(event) {
    event.preventDefault();

    // Obter valores do formulário
    const nome = document.getElementById('nome').value;
    const email = document.getElementById('email').value;
    const mensagem = document.getElementById('mensagem').value;

    // Simular envio do formulário (exemplo)
    setTimeout(function() {
        alert(`Mensagem enviada!\n\nNome: ${nome}\nEmail: ${email}\nMensagem: ${mensagem}`);
        formContato.reset();
    }, 1000);
});
